{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OS Presenter",
  "version": "0.1.0",
  "identifier": "com.mwritter.os-presenter",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build/client"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "OS Presenter",
        "titleBarStyle": "Overlay",
        "resizable": true,
        "width": 1200,
        "height": 900,
        "minWidth": 900,
        "minHeight": 720,
        "dragDropEnabled": false
      },
      {
        "label": "audience",
        "url": "/pages/audience",
        "titleBarStyle": "Overlay",
        "title": "Audience View",
        "visible": false,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "shadow": false,
        "width": 1200,
        "height": 900,
        "minWidth": 900,
        "minHeight": 720
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
