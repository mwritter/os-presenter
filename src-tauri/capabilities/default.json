{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main", "audience"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-close",
    "core:window:allow-minimize",
    "core:window:allow-toggle-maximize",
    "opener:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-message",
    "dialog:allow-confirm",
    "core:event:allow-listen",
    "core:menu:default",
    "core:menu:allow-new",
    "core:menu:allow-popup"
  ],
  "listen": [
    {
      "name": "active-slide-changed",
      "payload": {
        "id": "string",
        "data": "string"
      }
    },
    {
      "name": "video:control",
      "payload": {
        "slideId": "string",
        "action": "string"
      }
    },
    {
      "name": "video:state-update",
      "payload": {
        "slideId": "string",
        "currentTime": "number",
        "duration": "number",
        "paused": "boolean"
      }
    }
  ]
}
