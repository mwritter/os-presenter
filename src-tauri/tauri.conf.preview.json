{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OS Presenter",
  "version": "0.1.0",
  "identifier": "com.mwritter.os-presenter",
  "build": {
    "beforeDevCommand": "npm run preview",
    "devUrl": "http://localhost:4173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build/client"
  },
  "app": {
    "windows": [
      {
        "title": "OS Presenter (Preview)",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
